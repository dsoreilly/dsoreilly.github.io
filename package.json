{
  "name": "dsoreilly.github.io",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run compile && npm run format",
    "compile": "npx tailwindcss -i ./src/main.css -o ./dist/main.min.css --minify",
    "deploy": "npm run build && npm run postdeploy",
    "format": "npx prettier --write ./src/index.html",
    "postdeploy": "cp ./src/CNAME ./src/Hubot-Sans.woff2 ./src/index.html ./src/favicon.ico ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsoreilly/dsoreilly.github.io.git"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "postcss-preset-env": "^8.1.0",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "stylelint": "^15.3.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^31.0.0",
    "tailwindcss": "^3.2.7"
  }
}
