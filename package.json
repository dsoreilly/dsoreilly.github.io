{
  "name": "dsoreilly.github.io",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:html",
    "build:css": "npx postcss ./src/main.css -o ./dist/main.min.css",
    "build:html": "cp ./src/CNAME ./src/index.html ./dist",
    "deploy": "npm run build && npm run post-deploy",
    "post-deploy": "npx prettier --write ./dist/index.html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsoreilly/dsoreilly.github.io.git"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.15",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0"
  }
}
